{% load extras %}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
        @page {
            size: A4;
            margin: 2cm 2.5cm;
        }
        body {
            font-family: Arial, sans-serif;
            line-height: 1.4;
            color: #000;
            font-size: 10pt;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }
        h1 {
            color: #000;
            font-size: 14pt;
            text-align: center;
            margin: 0 0 15px 0;
            padding: 0;
            text-transform: uppercase;
            font-weight: bold;
        }
        .header {
            margin-bottom: 20px;
            text-align: left;
        }
        .header p {
            margin: 5px 0;
            font-size: 10pt;
        }
        .tabla-fotos {
            width: 100%;
            border-collapse: separate;
            border-spacing: 10px 5px;
            margin: 0 -5px 10px -5px;
            page-break-inside: avoid;
        }
        .celda-foto {
            width: 50%;
            vertical-align: top;
            page-break-inside: avoid;
            padding: 0 5px;
        }
        .foto-container {
            margin-bottom: 30px;
            height: 100%;
        }
        .foto-header {
            color: #000;
            font-weight: bold;
            font-size: 10pt;
            margin-bottom: 5px;
        }
        .foto-content {
            border: 1px solid #000;
            height: 250px;
            position: relative;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .foto-numero {
            position: absolute;
            top: 5px;
            left: 5px;
            font-weight: bold;
        }
        .foto-descripcion {
            font-size: 9pt;
            line-height: 1.4;
            color: #000;
            margin-top: 5px;
            padding: 0 5px;
        }
        .foto-content img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }
        .page-break {
            page-break-after: always;
        }
    </style>
</head>
<body>
    <h1>REPORTE FOTOGRÁFICO</h1>
    
    <div class="header">
        <p><strong>PROYECTO:</strong> {{ reporte.proyecto.nombre }}</p>
        <p><strong>FECHA:</strong> {{ reporte.fecha|date:"d/m/Y" }}</p>
        <p><strong>UBICACIÓN:</strong> {{ reporte.ubicacion }}</p>
    </div>

    <table class="tabla-fotos">
        <tr>
            {% for foto in fotos|slice:":2" %}
            <td class="celda-foto">
                <div class="foto-container">
                    <div class="foto-header">FOTO {{ forloop.counter }}</div>
                    <div class="foto-content">
                        <span class="foto-numero">{{ forloop.counter }}</span>
                        <img src="{{ foto.imagen_path }}" alt="Fotografía {{ forloop.counter }}">
                    </div>
                    <div class="foto-descripcion">
                        {{ foto.descripcion|default:"Descripción de la fotografía" }}
                    </div>
                </div>
            </td>
            {% endfor %}
        </tr>
    </table>

    {% if fotos|length > 2 %}
    <div class="page-break"></div>
    <table class="tabla-fotos">
        <tr>
            {% for foto in fotos|slice:"2:4" %}
            <td class="celda-foto">
                <div class="foto-container">
                    <div class="foto-header">FOTO {{ forloop.counter|add:2 }}</div>
                    <div class="foto-content">
                        <span class="foto-numero">{{ forloop.counter|add:2 }}</span>
                        <img src="{{ foto.imagen_path }}" alt="Fotografía {{ forloop.counter|add:2 }}">
                    </div>
                    <div class="foto-descripcion">
                        {{ foto.descripcion|default:"Descripción de la fotografía" }}
                    </div>
                </div>
            </td>
            {% endfor %}
        </tr>
    </table>
    {% endif %}

    {% if fotos|length > 4 %}
    <div class="page-break"></div>
    <table class="tabla-fotos">
        <tr>
            {% for foto in fotos|slice:"4:6" %}
            <td class="celda-foto">
                <div class="foto-container">
                    <div class="foto-header">FOTO {{ forloop.counter|add:4 }}</div>
                    <div class="foto-content">
                        <span class="foto-numero">{{ forloop.counter|add:4 }}</span>
                        <img src="{{ foto.imagen_path }}" alt="Fotografía {{ forloop.counter|add:4 }}">
                    </div>
                    <div class="foto-descripcion">
                        {{ foto.descripcion|default:"Descripción de la fotografía" }}
                    </div>
                </div>
            </td>
            {% endfor %}
        </tr>
    </table>
    {% endif %}

    {% if fotos|length > 6 %}
    <div class="page-break"></div>
    <table class="tabla-fotos">
        <tr>
            {% for foto in fotos|slice:"6:8" %}
            <td class="celda-foto">
                <div class="foto-container">
                    <div class="foto-header">FOTO {{ forloop.counter|add:6 }}</div>
                    <div class="foto-content">
                        <span class="foto-numero">{{ forloop.counter|add:6 }}</span>
                        <img src="{{ foto.imagen_path }}" alt="Fotografía {{ forloop.counter|add:6 }}">
                    </div>
                    <div class="foto-descripcion">
                        {{ foto.descripcion|default:"Descripción de la fotografía" }}
                    </div>
                </div>
            </td>
            {% endfor %}
        </tr>
    </table>
    {% endif %}
</body>
</html>
